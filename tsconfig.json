{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2017",

    /* Modules */
    "module": "commonjs",
    "outDir": "../lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": true
  }
}
